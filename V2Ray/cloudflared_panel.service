[Unit]
Description=Cloudflared FastAPI Panel
After=network.target

[Service]
Type=simple
User=user
Group=user
WorkingDirectory=/home/user/cloudflared_panel
ExecStart=/home/user/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
